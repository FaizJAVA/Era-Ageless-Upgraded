<html>

<head>
    <%- include("../Partial/bootstrap.ejs")%>
        <style>
            .form-group {
                color:black;
            }
            .row {
                background: var(--light);
                width: 900px;
                padding: 50px;
                margin: 20px;
                box-shadow: rgba(50, 50, 93, 0.25) 0px 50px 100px -20px, rgba(0, 0, 0, 0.3) 0px 30px 60px -30px, rgba(10, 37, 64, 0.35) 0px -2px 6px 0px inset;
                
            }
        </style>
       </head>
<body>
    <%- include("../Partial/admin_dash_navbar.ejs")%>
  <!-- CONTENT -->
    <section id="content">
        <!-- NAVBAR -->
        <nav>
            <i class='bx bx-menu' ></i>
            <a href="#" class="nav-link">Categories</a>
            <form action="#">
                <div class="form-input">
                    <input type="search" placeholder="Search...">
                    <button type="submit" class="search-btn"><i class='bx bx-search' ></i></button>
                </div>
            </form>
            <input type="checkbox" id="switch-mode" hidden>
            <label for="switch-mode" class="switch-mode"></label>
            <a href="#" class="notification">
                <i class='bx bxs-bell' ></i>
                <span class="num">8</span>
            </a>
            <a href="#" class="profile">
                <img src="/Images/dashboard_image.png">
            </a>
        </nav>
        <main>
            <div class="container-fluid">
                <div class="row">
                    <div class="col-10">
                        <form action="/product/add-product" enctype="multipart/form-data" method="post">
                            <div class="form-group">
                                <div class="label"> <label for="">Category</label></div>
                                <select name="category_id">
                                    <option>Choose Category</option>
                                    <% for(category of categoryList){ %>
                                        <option value="<%=category.id%>">
                                            <%=category.name%>
                                        </option>
                                        <% } %>
        
                                </select>
                            </div>
                            <div class="form-group">
                                <div class="label"> <label for="">Name</label></div>
                                <input type="text" class="form-control" name="name">
                            </div>
                            <div class="form-group">
                                <div class="label"> <label for="">Price</label></div>
                                <input type="text" class="form-control" name="price" placeholder="ENTER THE PRICE">
                            </div>
        
                            <div class="form-group">
                                <div class="label"> <label for="">Description</label></div>
                                <textarea class="form-control" name="description"></textarea>
                            </div>
                            <div class="form-group">
                                <div class="label"> <label for="">Qty</label></div>
                                <input type="text" class="form-control" name="qty">
                            </div>
                            <div class="form-group">
                                <div class="label"> <label for="">Image1</label></div>
                                <input type="file" name="images" multiple />
                            </div>
        
                            <button class="btn btn-primary">Add</button>
                            <button class="btn btn-danger">cancel</button>
                        </form>
                    </div>
                </div>
            </div>
            
        </main>
    </section>
    

    <script src="script.js"></script>
</body>


</html>