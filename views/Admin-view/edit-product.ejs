<html>
    <head>
        <%- include("../Partial/boot.ejs")%>
        <style>
            .form-group{
                color:blue;
            }
            
            .form-style{
                background: var(--light);
                height: 700px;
                margin: 20px;
                padding: 30px;
                border-radius: 20px;
                font-family: var(--lato);
                position: sticky;
            }

        </style>
    </head>
    <body>
        <%- include("../Partial/admin_nav")%>
        <div class="container-fluid">
            <div class="row">
                <div class="col-12">
                    <div class="form-style">
        <form action="/product/edit-product" enctype="multipart/form-data" method="post">
            <div class="form-group">
                <div class="label"> <label for="">Category</label></div>
                <select name="category_id">
                    <option value="<%=product.category_id%>"><%=product.c_name%></option>
                    <%
                        for(cat of category){
                            if(cat.id==product.category_id)
                              continue;
                            %>
                            <option value="<%=cat.id%>"><%=cat.name%></option>
                        <%
                        }
                        %>
                    
                </select>
            </div>
            <div class="form-group" >
               <div class="label"> <label for="">Name</label></div>
               <input type="text" class="form-control" name="name" value="<%=product.name%>">
            </div>
            <input type="text" value="<%=product.id%>" name="id" hidden>
            <div class="form-group">
                <div class="label"> <label for="">Price</label></div>
                <input type="text" class="form-control" name="price" value="<%=product.price%>">
             </div>
             
             <div class="form-group">
                <div class="label"> <label for="">Description</label></div>
               <textarea class="form-control" name="description"><%=product.description%></textarea>
             </div>
             <div class="form-group">
                <div class="label"> <label for="">Qty</label></div>
                <input type="text" class="form-control" name="qty" value="<%=product.qty%>">
             </div>
             <div class="form-group">
                <div class="label"> <label for="">Image</label></div>
                <input type="file" name="images" multiple value="<%=product.images%>"/>
             </div>
             
             <button class="btn btn-primary">Add</button>
             <button class="btn btn-danger">cancel</button>
        </form>
    </div>
                </div>
            </div>
        </div>
        
    </body>
</html>